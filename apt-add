# By Robert Nelson.
#

test -n "$DEBUG_EXEC" && set -x

TOOLDIR=/usr/share/vzpkg2

. ${TOOLDIR}/apt-functions

log4 Started $0 $*

$VZCTL exec $VEID apt-get -y update
$VZCTL exec2 $VEID apt-get -y install $*

exit $?
